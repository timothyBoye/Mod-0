package com.timothyboye.minecraft.mod0.config;

import java.io.File;

import net.minecraftforge.common.Configuration;

public class ConfigHandler {

public static final String CAT_USELESS = "useless stuff";

public static int EXAMPLE_VALUE;
public static final String EXAMPLE_NAME= "example";
public static final int EXAMPLE_DEFAULT = 5;

public static String EXAMPLE2_VALUE;
public static final String EXAMPLE2_NAME= "example2";
public static final String EXAMPLE2_DEFAULT = "Testing";

public static void init(File file) {
	Configuration config = new Configuration(file);
	
	config.load();
	
	EXAMPLE_VALUE = config.get(CAT_USELESS, EXAMPLE_NAME, EXAMPLE_DEFAULT).getInt();
	EXAMPLE2_VALUE = config.get(CAT_USELESS, EXAMPLE2_NAME, EXAMPLE2_DEFAULT).getString();
	
	config.save();
}
	
}
